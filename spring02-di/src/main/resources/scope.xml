<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--
    scope:
        singleton: 单例模式，bean默认为单例模式
        prototype：每次创建bean，都是一个新的实例
    -->

    <bean id="user3" class="com.hua.spring02.pojo.User" scope="singleton">
        <property name="name" value="华仔"/>
        <property name="age" value="18"/>
    </bean>

    <bean id="user4" class="com.hua.spring02.pojo.User" scope="prototype">
        <property name="name" value="华子"/>
        <property name="age" value="18"/>
    </bean>



</beans>